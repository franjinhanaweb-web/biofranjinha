rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regras para uploads de usuários
    match /users/{userId}/{allPaths=**} {
      // Apenas o próprio usuário autenticado pode acessar
      // Requer autenticação, verificação de email e App Check
      allow read, write: if request.auth != null 
        && request.auth.uid == userId
        && request.auth.token.email_verified == true
        && request.app_check_token != null;
    }
    
    // Regras para arquivos públicos (apenas leitura)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Apenas admins podem escrever
    }
    
    // Bloquear todos os outros caminhos
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

